---
import { getEntry } from 'astro:content';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import Button from '../../../components/UI/Button.astro';

export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/admin/events');
}

const event = await getEntry('events', slug);

if (!event) {
  return new Response(`Event with slug "${slug}" not found.`, { status: 404 });
}
---
<AdminLayout title={`Delete Event: ${event.data.title}`}>
  <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Confirm Deletion</h1>
    <p class="text-gray-700 mb-6">
      Are you sure you want to delete the event: <strong class="font-semibold">{event.data.title}</strong>? This action cannot be undone.
    </p>
    <form method="POST" action={`/api/events/delete`}>
      <input type="hidden" name="slug" value={event.slug} />
      <div class="flex justify-end gap-4">
        <Button href="/admin" variant="outline">Cancel</Button>
        <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-md hover:bg-red-700 transition-colors text-base font-medium">Delete Event</button>
      </div>
    </form>
  </div>
</AdminLayout>