---
import { getCollection } from 'astro:content';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { capitalize } from '../../utils/stringHelpers';
import { CONFIG } from '../../constants';

export const prerender = false;

const events = await getCollection('events');
const scholarships = await getCollection('scholarships');
---
<AdminLayout title="Admin Dashboard">
  <div class="space-y-12">
    <!-- Events Section -->
    <div>
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Events</h1>
        <a href="/admin/create" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
          Create New Event
        </a>
      </div>

      <div class="bg-white shadow-md rounded-lg">
        <ul class="divide-y divide-gray-200">
          {events.map(event => (
            <li class="p-4 flex justify-between items-center">
              <div>
                <p class="font-semibold text-gray-900">{event.data.title}</p>
                <p class="text-sm text-gray-600">
                  {event.data.date.toLocaleDateString()} &middot; {event.data.location}
                </p>
              </div>
              <div class="flex gap-4">
                <a href={`/admin/edit/${event.slug}`} class="text-blue-600 hover:underline">Edit</a>
                <a href={`/admin/delete/${event.slug}`} class="text-red-600 hover:underline">Delete</a>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Scholarships Section -->
    <div>
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Resources (Scholarships, Fellowships, Internships)</h1>
        <a href="/admin/scholarships/create" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
          Create New Resource
        </a>
      </div>

      <div class="bg-white shadow-md rounded-lg">
        <ul class="divide-y divide-gray-200">
          {scholarships.map(scholarship => (
            <li class="p-4 flex justify-between items-center">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <p class="font-semibold text-gray-900">{scholarship.data.name}</p>
                  <span class={`inline-block px-2 py-1 text-xs font-semibold text-white rounded ${CONFIG.TYPE_BADGES[scholarship.data.type]}`}>
                    {capitalize(scholarship.data.type)}
                  </span>
                </div>
                <p class="text-sm text-gray-600">
                  Deadline: {scholarship.data.deadline.toLocaleDateString()} | Amount: ${scholarship.data.amount.toLocaleString()}
                </p>
              </div>
              <div class="flex gap-4">
                <a href={`/admin/scholarships/edit/${scholarship.slug}`} class="text-blue-600 hover:underline">Edit</a>
                <a href={`/admin/scholarships/delete/${scholarship.slug}`} class="text-red-600 hover:underline">Delete</a>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</AdminLayout>