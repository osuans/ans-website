---
import { getCollection } from "astro:content";
import PostLayout from "../../layouts/PostLayout.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export const prerender = true;

export async function getStaticPaths() {
  const scholarships = await getCollection("scholarships");
  return scholarships.map((scholarship) => ({
    params: { slug: scholarship.slug },
    props: { scholarship },
  }));
}

const { scholarship } = Astro.props;
const { Content } = await scholarship.render();
---
<BaseLayout
  title={`${scholarship.data.name} - ANS at OSU`}
  description={scholarship.data.description}
>
  <PostLayout
    title={scholarship.data.name}
    description={scholarship.data.description}
  >
    <div class="mb-6">
      <a href="/resources" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Resources
      </a>
    </div>

    <div class="prose max-w-none">
      <div class="mb-8">
        <h2 class="text-2xl font-bold">Details</h2>
        <p><strong>Amount:</strong> ${scholarship.data.amount.toLocaleString()}</p>
        <p><strong>Frequency:</strong> {scholarship.data.frequency}</p>
        <p><strong>Deadline:</strong> {new Date(scholarship.data.deadline).toLocaleDateString()}</p>
      </div>

      <div class="mb-8">
        <h2 class="text-2xl font-bold">Eligibility</h2>
        <ul class="list-disc pl-5">
          {scholarship.data.eligibility.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

      <div class="mb-8">
          <h2 class="text-2xl font-bold">Description</h2>
          <p>{scholarship.data.description}</p>
      </div>

      {scholarship.data.applicationUrl && (
        <div class="mb-8">
          <h2 class="text-2xl font-bold">Apply</h2>
          <p><a href={scholarship.data.applicationUrl} target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 underline">Apply Here â†’</a></p>
        </div>
      )}

    </div>
  </PostLayout>
</BaseLayout>
