---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import CalendarEvents from "../components/Sections/CalendarEvents.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="American Nuclear Society at Ohio State"
    subtitle="Advancing nuclear science education, research, and professional development"
    backgroundImage="/uploads/npp.jpg"
    ctaText="Become a Member"
    ctaLink="/join"
    secondaryCtaText="Upcoming Events"
    secondaryCtaLink="/events"
  />

  <!-- About Section -->
  <section class="py-16 bg-secondary-100">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/uploads/scottlab.jpg"
            alt=""
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Who We Are</h2>
          <p class="text-gray-700 mb-6 text-lg">
            The American Nuclear Society Student Section at The Ohio State
            University brings together students committed to excellence in
            nuclear science and engineering. As part of the nation's premier
            professional organization for nuclear technology, we connect
            academic learning with real-world applications.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Our members engage in cutting-edge research, develop professional
            competencies, and build connections with industry leaders across
            fission, fusion, and medical physics. We are dedicated to advancing
            the peaceful applications of nuclear science for the betterment of
            society.
          </p>

          <Button href="/about-us"> Learn More About Us </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <EventList />

  <!-- Calendar Events from Outlook -->
  <CalendarEvents count={3} />

  <!-- Call to Action -->
  <section
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/npp2.jpg)"
  >
    <div class="container ">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
          Shape the Future of Clean Energy
        </h2>
        <p class="text-xl mb-8">
          Join a community of scholars and professionals advancing nuclear
          science and technology. Access research opportunities, industry
          connections, and leadership development.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/join" variant="primary" size="lg">
            Become a Member
          </Button>

          <Button
            href="/events"
            variant="outline"
            size="lg"
            class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm"
          >
           View Events
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
