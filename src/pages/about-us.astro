---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import StaffList from "../components/Sections/StaffList.astro";
import FeatureCard from "../components/UI/FeatureCard.astro";
---

<BaseLayout
  title="About Us - American Nuclear Society at Ohio State"
  description="Learn about the ANS student chapter at Ohio State, our mission to advance nuclear science education, and opportunities for professional development."
>
  <PageHeader
    title="About Us"
    subtitle="Advancing Nuclear Science Through Education, Research, and Community"
    backgroundImage="/uploads/ans.jpeg"
  />

  <!-- Mission & Vision -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Mission</h2>
          <p class="text-xl text-gray-700 mb-8">
            The American Nuclear Society Student Section at The Ohio State
            University is dedicated to promoting academic excellence,
            professional development, and public understanding of nuclear
            science and engineering. We provide students with meaningful
            opportunities for research collaboration, community outreach, and
            industry engagement.
          </p>

          <h2 class="text-3xl md:text-4xl font-bold mb-6">What We Do</h2>
          <p class="text-xl text-gray-700 mb-8">
            We organize technical seminars, nuclear facility tours, and career
            development panels featuring industry professionals. Our chapter
            actively promotes undergraduate and graduate research while leading
            STEM education and public outreach initiatives. We proudly represent
            Ohio State at regional and national ANS conferences, connecting our
            members with the broader nuclear science community.
          </p>

          <h2 class="text-3xl md:text-4xl font-bold mb-6">Who Can Join</h2>
          <p class="text-xl text-gray-700 mb-8">
            Membership is open to all Ohio State students with an interest in
            nuclear science, engineering, or related fields. Whether you are
            exploring career options or pursuing advanced research, no prior
            experience is required to join our community.
          </p>
        </div>

        <div>
          <img
            src="/uploads/ans2.jpeg"
            alt=""
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="py-16 bg-gray-100">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Membership Benefits</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          ANS membership provides access to professional development resources,
          industry connections, and leadership opportunities in nuclear science
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <FeatureCard
          icon="graduation"
          title="Career Development"
          description="Access internship opportunities, career guidance, and professional mentorship through our industry partnerships and alumni network."
          bgColor="primary"
        />

        <FeatureCard
          icon="globe"
          title="Advance Clean Energy"
          description="Contribute to the development of sustainable, reliable nuclear energy solutions and join the next generation of scientists and engineers addressing global energy challenges."
          bgColor="secondary"
        />

        <FeatureCard
          icon="users"
          title="Professional Network"
          description="Establish lasting professional relationships with peers, faculty advisors, alumni, and industry leaders throughout your academic career and beyond."
          bgColor="blue"
        />

        <FeatureCard
          icon="wrench"
          title="Research Experience"
          description="Engage in undergraduate and graduate research projects, technical competitions, and community outreach initiatives that strengthen your academic portfolio."
          bgColor="green"
        />

        <FeatureCard
          icon="trophy"
          title="Scholarships and Recognition"
          description="Compete for ANS scholarships, academic honors, and professional recognition through regional and national programs."
          bgColor="purple"
        />

        <FeatureCard
          icon="briefcase"
          title="Industry Engagement"
          description="Connect with professionals from national laboratories, nuclear utilities, and research institutions through technical seminars, facility tours, and conferences."
          bgColor="yellow"
        />
      </div>
    </div>
  </section>

  <!-- Leadership Team Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Student Leadership</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our executive board and committee members are committed to advancing
          academic excellence, professional development, and community
          engagement within the nuclear science field at Ohio State.
        </p>
      </div>

      <!-- Show limited staff preview -->
      <StaffList showAll={false} limit={3} />

      <div class="mt-12 text-center">
        <a
          href="/staff"
          class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-primary-600 rounded-md shadow-sm hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          View Full Leadership Team
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
