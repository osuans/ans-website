---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import StaffList from "../components/Sections/StaffList.astro";
import FeatureCard from "../components/UI/FeatureCard.astro";
---

<BaseLayout
  title="The American Nuclear Society at OSU"
  description="Learn about our mission and values and how we can help your career."
>
  <PageHeader
    title="About Us"
    subtitle="Our Mission and Values"
    backgroundImage="/uploads/ans.jpeg"
  />

  <!-- Mission & Vision -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Mission</h2>
          <p class="text-xl text-gray-700 mb-8">
            We foster academic growth, professional excellence, and public
            awareness in nuclear science and engineering by providing students
            with opportunities for research, outreach, and industry engagement.
          </p>

          <h2 class="text-3xl md:text-4xl font-bold mb-6">What We Do</h2>
          <p class="text-xl text-gray-700 mb-8">
            We host technical talks, facility tours, and career panels, promotes
            nuclear research, and leads outreach and STEM education initiatives.
            We also represent OSU at regional and national ANS conferences,
            connecting students with the broader nuclear community.
          </p>

          <h2 class="text-3xl md:text-4xl font-bold mb-6">Who Can Join</h2>
          <p class="text-xl text-gray-700 mb-8">
            All Ohio State students interested in nuclear science or engineering
            are welcomeâ€”no experience required.
          </p>
        </div>

        <div>
          <img
            src="/uploads/ans2.jpeg"
            alt=""
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="py-16 bg-gray-100">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Join Us?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover the incredible benefits and opportunities that await you as
          an ANS member
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <FeatureCard
          icon="graduation"
          title="Career Development"
          description="Access exclusive internships, job opportunities, and career guidance through industry partnerships."
          bgColor="primary"
        />

        <FeatureCard
          icon="globe"
          title="Change the Future of Energy"
          description="Contribute to advancing clean, reliable nuclear energy and represent the next generation of engineers shaping global sustainability."
          bgColor="secondary"
        />

        <FeatureCard
          icon="users"
          title="Professional Network"
          description="Build lifelong connections with peers, faculty, alumni, and industry leaders."
          bgColor="blue"
        />

        <FeatureCard
          icon="wrench"
          title="Hands-on Experience"
          description="Participate in research projects, technical competitions, and outreach events."
          bgColor="green"
        />

        <FeatureCard
          icon="trophy"
          title="Recognition and Awards"
          description="Compete for scholarships, academic awards, and recognition across ANS programs."
          bgColor="purple"
        />

        <FeatureCard
          icon="briefcase"
          title="Industry & Research Opportunities"
          description="Engage directly with leaders from national labs, nuclear utilities, and research institutions through guest talks, plant tours, and conferences."
          bgColor="yellow"
        />
      </div>
    </div>
  </section>

  <!-- Leadership Team Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Meet Our Leadership</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our student leaders and members are dedicated to fostering curiosity,
          professionalism, and community within the field of nuclear science at
          Ohio State.
        </p>
      </div>

      <!-- Show limited staff preview -->
      <StaffList showAll={false} limit={3} />

      <div class="mt-12 text-center">
        <a
          href="/staff"
          class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-primary-600 rounded-md shadow-sm hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          Meet All Our Members
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
