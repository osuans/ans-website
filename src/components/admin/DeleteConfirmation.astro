---
import Button from '../UI/Button.astro';

interface Props {
  itemName: string;
  itemType: string;
  slug: string;
  apiEndpoint: string;
}

const { itemName, itemType, slug, apiEndpoint } = Astro.props;
const capitalizedType = itemType.charAt(0).toUpperCase() + itemType.slice(1);
---

<div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-4">Confirm Deletion</h1>
  <p class="text-gray-700 mb-6">
    Are you sure you want to delete the {itemType}: <strong class="font-semibold">{itemName}</strong>? This action cannot be undone.
  </p>
  <form method="POST" action={apiEndpoint}>
    <input type="hidden" name="slug" value={slug} />
    <div class="flex justify-end gap-4">
      <Button href="/admin" variant="outline">Cancel</Button>
      <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-md hover:bg-red-700 transition-colors text-base font-medium">
        Delete {capitalizedType}
      </button>
    </div>
  </form>
</div>
