---
import Icon from './Icon.astro';
import type { IconName } from '../../constants/icons';

interface Props {
  /**
   * The icon to display
   */
  icon: IconName;

  /**
   * Feature title
   */
  title: string;

  /**
   * Feature description
   */
  description: string;

  /**
   * Background color for the icon circle (e.g., 'primary', 'secondary', 'blue', 'green', 'purple', 'yellow')
   */
  bgColor?: string;
}

const {
  icon,
  title,
  description,
  bgColor = 'primary'
} = Astro.props;

// Map bgColor to actual Tailwind classes (required for JIT compiler)
const bgColorMap: Record<string, string> = {
  primary: 'bg-primary-100',
  secondary: 'bg-secondary-100',
  blue: 'bg-blue-100',
  green: 'bg-green-100',
  purple: 'bg-purple-100',
  yellow: 'bg-yellow-100',
};

const bgColorClass = bgColorMap[bgColor] || bgColorMap.primary;
---

<div class="bg-white p-8 rounded-lg shadow-sm">
  <div class={`w-16 h-16 rounded-full ${bgColorClass} flex items-center justify-center mb-6`}>
    <Icon name={icon} class="size-8" />
  </div>
  <h3 class="text-xl font-bold mb-3">{title}</h3>
  <p class="text-gray-700">{description}</p>
</div>
